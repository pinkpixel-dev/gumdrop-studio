{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gumdrop Studio",
  "identifier": "dev.pinkpixel.gumdrop-studio",
  "version": "1.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1234",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Gumdrop Studio",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "maximized": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**"]
      },
      "capabilities": [
        {
          "identifier": "gumdrop-studio-capability",
          "description": "Gumdrop Studio permissions",
          "windows": ["main"],
          "permissions": [
            "fs:allow-read",
            "fs:allow-write",
            "dialog:allow-open",
            "dialog:allow-save",
            "dialog:allow-message",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "shell:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Pink Pixel",
    "homepage": "https://pinkpixel.dev",
    "category": "Graphics",
    "shortDescription": "A fun pixel art creation app",
    "longDescription": "Gumdrop Studio is a modern pixel art creation app featuring a unique dual-layer canvas system for creating adorable pixel art with smooth vector overlays.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
